[
  {
    "label": "debug: dev-cli",
    "build": {
      "command": "cargo",
      "args": ["build", "--bin", "qp-dev-cli"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/qp-dev-cli",
    "args": [
      "plan",
      "$ZED_WORKTREE_ROOT/lib/query-planner/fixture/supergraph.graphql",
      "$ZED_WORKTREE_ROOT/lib/query-planner/fixture/operation.graphql"
    ],
    "request": "launch",
    "adapter": "CodeLLDB"
  },
  {
    "label": "debug: gateway",
    "build": {
      "command": "cargo",
      "args": ["build", "--package", "gateway", "--bin", "gateway"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/gateway",
    "args": ["$ZED_WORKTREE_ROOT/lib/query-planner/fixture/supergraph.graphql"],
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
