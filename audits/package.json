{
  "name": "hive-gateway-rs",
  "type": "module",
  "scripts": {
    "test:federation-all": "graphql-federation-audit test --run-script=\"./run-gw.sh\" --graphql=\"http://localhost:4000/graphql\" --healthcheck=\"http://localhost:4000/health\" --junit",
    "test:federation-single": "graphql-federation-audit test-suite --run-script=\"./run-gw.sh\" --graphql=\"http://localhost:4000/graphql\" --healthcheck=\"http://localhost:4000/health\" --write=\"federation-audit-results.txt\"",
    "start:test-gateway": "cd .. && cargo gateway lib/query-planner/fixture/spotify-supergraph.graphql",
    "test:graphql-over-http": "node --test graphql-over-http.test.js",
    "test-junit:graphql-over-http": "node --test --test-reporter=junit --test-reporter-destination=\"./reports/graphql-over-http.xml\" graphql-over-http.test.js",
    "ci:test:graphql-over-http": "start-server-and-test start:test-gateway http://localhost:4000 test-junit:graphql-over-http"
  },
  "devDependencies": {
    "graphql-federation-gateway-audit": "the-guild-org/graphql-federation-gateway-audit",
    "graphql-http": "^1.22.4",
    "typescript": "^5.8.3",
    "start-server-and-test": "^2.0.12"
  },
  "packageManager": "npm@11.4.2"
}
